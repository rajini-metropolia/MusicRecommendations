<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    
  	   <ViewStub
	        android:id="@+id/vsHeader"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inflatedId="@+id/header"
	        android:layout="@layout/header" />
	 
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:padding="6dip" >
	 
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	 
	            <Button
	                android:id="@+id/top_tracks_btn"
	                style="@style/HomeButton"
	                android:drawableTop="@drawable/top_tracks_logo"
	                android:onClick="onFeatureBtnClick"
	                android:text="@string/top_tracks" />
	 
	            <Button
	                android:id="@+id/top_artists_btn"
	                style="@style/HomeButton"
	                android:drawableTop="@drawable/top_artists_logo"
	                android:onClick="onFeatureBtnClick"
	                android:text="@string/top_artists" />
	        </LinearLayout>

		<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	 
	            <Button
	                android:id="@+id/events_btn"
	                style="@style/HomeButton"
	                android:drawableTop="@drawable/events_logo"
	                android:onClick="onFeatureBtnClick"
	                android:text="@string/events" />
	 
	            <Button
	                android:id="@+id/top_albums_btn"
	                style="@style/HomeButton"
	                android:drawableTop="@drawable/top_albums_logo"
	                android:onClick="onFeatureBtnClick"
	                android:text="@string/top_albums" />
	        </LinearLayout>
	 
	
	    </LinearLayout>

	        
</LinearLayout>
